#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_main_menu.kv
#:include screen_pipe_setting.kv
#:include screen_machine_setting.kv
#:include screen_advanced_setting.kv
#:include screen_operate_manual.kv
#:include screen_operate_auto.kv
#:include screen_compile.kv

# ScreenManager:
<RootScreen>:
    id: screen_manager
    transition: NoTransition()

    ScreenSplash:
        app_window: app
        name: 'screen_splash'
        screen_manager: screen_manager
        screen_main_menu: screen_main_menu
       
    ScreenMainMenu:
        id: screen_main_menu
        name: 'screen_main_menu'
        screen_manager: screen_manager

    ScreenPipeSetting:
        id: screen_pipe_setting
        name: 'screen_pipe_setting'
        screen_manager: screen_manager
       
    ScreenMachineSetting:
        id: screen_machine_setting
        name: 'screen_machine_setting'
        screen_manager: screen_manager

    ScreenAdvancedSetting:
        id: screen_advanced_setting
        name: 'screen_advanced_setting'
        screen_manager: screen_manager

    ScreenOperateManual:
        id: screen_operate_manual
        name: 'screen_operate_manual'
        screen_manager: screen_manager

    ScreenOperateAuto:
        id: screen_operate_auto
        name: 'screen_operate_auto'
        screen_manager: screen_manager

    ScreenCompile:
        id: screen_compile
        name: 'screen_compile'
        screen_manager: screen_manager
                  
